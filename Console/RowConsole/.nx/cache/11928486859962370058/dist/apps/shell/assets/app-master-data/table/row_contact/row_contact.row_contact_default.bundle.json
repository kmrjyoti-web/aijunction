{
    "feature": "row_contact",
    "key": "row_contact_default",
    "api": {
        "url": "CONTACT",
        "pathTable": "/v1/Master/RowContact/GetAll",
        "pathExport": "/v1/Master/RowContact/export",
        "method": "GET",
        "defaultPageSize": 10
    },
    "config": {
        "id": "row-contact-table",
        "title": "Contact Master",
        "dataStrategy": "SYNC",
        "pagingMode": "infinite",
        "infiniteScrollBehavior": "append",
        "enableColumnChooser": true,
        "enableExport": true,
        "enableRowMenu": true,
        "enableHeaderActions": true,
        "enableSavedQueries": true,
        "enableConfigButton": true,
        "enableMultiSelect": true,
        "defaultRows": 10,
        "role": "ADMIN",
        "toolbarActions": [
            {
                "label": "Refresh",
                "icon": "pi pi-refresh",
                "key": "refresh"
            },
            {
                "label": "Filter",
                "icon": "pi pi-filter",
                "key": "toggle:filter-sidebar"
            },
            {
                "label": "Load Config",
                "icon": "pi pi-upload",
                "key": "load:config"
            },
            {
                "label": "Config",
                "icon": "pi pi-cog",
                "key": "toggle:config-sidebar"
            },
            {
                "label": "Column Filters",
                "icon": "pi pi-filter-slash",
                "key": "toggle:column-filter"
            },
            {
                "label": "Export CSV",
                "icon": "pi pi-file",
                "key": "export:csv:current"
            },
            {
                "label": "Export Excel",
                "icon": "pi pi-file-excel",
                "key": "export:excel:current"
            },
            {
                "label": "Add Contact",
                "icon": "pi pi-plus",
                "key": "add:contacts"
            }
        ],
        "footerConfig": {
            "enabled": true,
            "buttons": [
                {
                    "key": "cancel",
                    "label": "Cancel",
                    "icon": "pi pi-times",
                    "class": "p-button-text",
                    "type": "close"
                },
                {
                    "key": "save",
                    "label": "Save",
                    "icon": "pi pi-check",
                    "class": "p-button-primary",
                    "type": "primary"
                }
            ],
            "metrics": [
                {
                    "key": "selectedCount",
                    "label": "Selected Records",
                    "type": "count"
                }
            ]
        },
        "sizerConfig": {
            "enabled": true,
            "defaultDensity": "cozy",
            "densities": [
                {
                    "name": "comfortable",
                    "rowHeight": 60,
                    "cssClass": "text-base"
                },
                {
                    "name": "cozy",
                    "rowHeight": 50,
                    "cssClass": "text-sm"
                },
                {
                    "name": "compact",
                    "rowHeight": 40,
                    "cssClass": "text-xs"
                },
                {
                    "name": "tiny",
                    "rowHeight": 30,
                    "cssClass": "text-xs"
                }
            ],
            "nonTableVerticalSpace": 450
        },
        "encryptionConfig": {
            "enabled": true,
            "encryptedFields": [
                "communication_detail",
                "email_id"
            ],
            "secretKey": "my-super-secret-key-for-demo"
        },
        "cardViewConfig": {
            "cardsPerRow": 4
        },
        "databaseConfig": {
            "version": 4,
            "mainTableName": "row_contacts",
            "metaDataTableName": "row_contact_meta_data",
            "stores": {
                "row_contacts": "row_contact_unique_id, organization_name, contact_person, communication_detail, email_id, annual_revenue, created_time, lead_source, last_activity_date",
                "row_contact_meta_data": "id, total_records, current_data_total, page_size, page_number, updated_at"
            }
        },
        "searchConfig": {
            "globalSearchFields": [
                "organization_name",
                "contact_person",
                "communication_detail",
                "email_id"
            ],
            "sortMappings": {
                "contact_person_composite": "contact_person"
            }
        }
    },
    "advancedFilters": {
        "enabled": true,
        "groups": [
            {
                "name": "Basic Information",
                "collapsible": true,
                "filters": [
                    {
                        "code": "organization_name",
                        "name": "Organization Name",
                        "type": "text",
                        "operators": [
                            "contains",
                            "equals",
                            "starts with",
                            "ends with"
                        ],
                        "defaultOperator": "contains"
                    },
                    {
                        "code": "contact_person",
                        "name": "Contact Person",
                        "type": "text",
                        "operators": [
                            "contains",
                            "equals",
                            "starts with",
                            "ends with"
                        ],
                        "defaultOperator": "contains"
                    },
                    {
                        "code": "communication_detail",
                        "name": "Mobile No",
                        "type": "text",
                        "operators": [
                            "contains",
                            "equals",
                            "starts with",
                            "ends with"
                        ],
                        "defaultOperator": "contains"
                    }
                ]
            },
            {
                "name": "System Defined Filters",
                "collapsible": true,
                "filters": [
                    {
                        "code": "touched_records",
                        "name": "Touched Records",
                        "type": "select",
                        "options": [
                            "Yes",
                            "No"
                        ]
                    },
                    {
                        "code": "untouched_records",
                        "name": "Untouched Records",
                        "type": "select",
                        "options": [
                            "Yes",
                            "No"
                        ]
                    },
                    {
                        "code": "related_records_action",
                        "name": "Related Records Action",
                        "type": "select",
                        "options": [
                            "Associated",
                            "Not Associated"
                        ]
                    },
                    {
                        "code": "annual_revenue",
                        "name": "Annual Revenue",
                        "type": "numeric",
                        "operators": [
                            "=",
                            "!=",
                            ">",
                            "<",
                            ">=",
                            "<=",
                            "between",
                            "not between"
                        ],
                        "defaultOperator": ">="
                    }
                ]
            },
            {
                "name": "Date Filters",
                "collapsible": true,
                "filters": [
                    {
                        "code": "created_time",
                        "name": "Created Date",
                        "type": "date",
                        "dateOperators": [
                            "in the last 30 days",
                            "this month",
                            "this year",
                            "today"
                        ]
                    }
                ]
            },
            {
                "name": "Lead Filters",
                "collapsible": false,
                "filters": [
                    {
                        "code": "lead_source",
                        "name": "Lead Source",
                        "type": "select",
                        "options": [
                            "Web",
                            "Organic",
                            "Referral"
                        ]
                    }
                ]
            }
        ]
    },
    "columns": [
        {
            "index": 0,
            "name": "Select",
            "code": "select_box",
            "display": "table_cell",
            "columnType": "CHECKBOX",
            "width": "50px",
            "align": "center",
            "sortable": false,
            "filterable": false,
            "showOnColumnChooser": false
        },
        {
            "index": 1,
            "name": "Contact Person",
            "code": "contact_person_composite",
            "display": "table_cell",
            "width": "250px",
            "sortable": true,
            "filterable": true,
            "cardHeader": true,
            "listRow": true,
            "listDisplayProperty": "contact_person",
            "filterOnCodes": [
                "contact_person",
                "organization_name"
            ],
            "cellTemplate": [
                {
                    "code": "avatar_url",
                    "columnType": "IMAGE",
                    "imageConfig": {
                        "shape": "circle"
                    }
                },
                {
                    "code": "contact_person",
                    "tag": "p",
                    "bold": true
                },
                {
                    "code": "organization_name",
                    "tag": "small"
                }
            ],
            "validations": [
                {
                    "code": "contact_person",
                    "isRequired": {
                        "status": true,
                        "tooltip": "Contact person name is mandatory."
                    }
                }
            ]
        },
        {
            "index": 2,
            "name": "Company",
            "code": "organization_name",
            "display": "table_cell",
            "sortable": true,
            "filterable": true,
            "listRow": true,
            "listDisplayProperty": "organization_name",
            "width": "200px",
            "validations": [
                {
                    "code": "organization_name",
                    "genericValidation": {
                        "minLength": 3,
                        "tooltip": "Company name must be at least 3 characters."
                    }
                }
            ]
        },
        {
            "index": 3,
            "name": "Communication",
            "code": "communication_detail",
            "display": "table_cell",
            "width": "150px",
            "sortable": true,
            "filterable": true,
            "cardRow": true,
            "mask": {
                "enabled": true,
                "unmaskEnabled": true,
                "visibleStart": 0,
                "visibleEnd": 4,
                "maskChar": "X"
            }
        },
        {
            "index": 4,
            "name": "Email",
            "code": "email_id",
            "display": "table_cell",
            "width": "250px",
            "sortable": true,
            "filterable": true,
            "cardHeader1": true,
            "listRow": true,
            "emailValidation": {
                "required": true,
                "notAllowedDomains": [
                    "test.com",
                    "example.com"
                ],
                "tooltip": "Email is required and cannot be from test domains."
            }
        },
        {
            "index": 5,
            "name": "Annual Revenue",
            "code": "annual_revenue",
            "display": "table_cell",
            "align": "right",
            "sortable": true,
            "filterable": true,
            "width": "150px",
            "cardRow": true
        },
        {
            "index": 6,
            "name": "Created Time",
            "code": "created_time",
            "display": "table_cell",
            "columnType": "DATE",
            "width": "180px",
            "sortable": true
        },
        {
            "index": 7,
            "name": "Lead Source",
            "code": "lead_source",
            "display": "table_cell",
            "sortable": true,
            "filterable": true,
            "width": "150px",
            "cardRow": true,
            "listRow": true
        },
        {
            "index": 8,
            "name": "Last Activity",
            "code": "last_activity_date",
            "display": "none",
            "columnType": "DATE",
            "sortable": true,
            "filterable": false,
            "showOnColumnChooser": true
        },
        {
            "index": 9,
            "name": "Action",
            "code": "action",
            "display": "table_cell",
            "columnType": "ACTION",
            "width": "80px",
            "align": "right",
            "showOnColumnChooser": false
        }
    ],
    "rowMenu": [
        {
            "label": "Actions",
            "items": [
                {
                    "label": "Edit",
                    "icon": "pi pi-pencil",
                    "action": "edit"
                },
                {
                    "label": "View Details",
                    "icon": "pi pi-info-circle",
                    "action": "view"
                },
                {
                    "label": "Send Email",
                    "icon": "pi pi-envelope",
                    "action": "email"
                }
            ]
        },
        {
            "label": "Danger Zone",
            "items": [
                {
                    "label": "Delete",
                    "icon": "pi pi-trash",
                    "action": "delete"
                }
            ]
        }
    ],
    "headerMenu": [
        {
            "label": "Bulk Actions",
            "items": [
                {
                    "label": "Archive Selected",
                    "icon": "pi pi-archive",
                    "action": "archive_selected"
                },
                {
                    "label": "Delete Selected",
                    "icon": "pi pi-trash",
                    "action": "delete_selected"
                }
            ]
        }
    ],
    "drawerConfig": {
        "width": "400px",
        "position": "right",
        "buttons": [
            {
                "label": "Cancel",
                "icon": "pi pi-times",
                "class": "p-button-text",
                "action": "close",
                "type": "close"
            },
            {
                "label": "Save",
                "icon": "pi pi-check",
                "class": "p-button-primary",
                "action": "save",
                "type": "primary"
            }
        ],
        "headerActions": [
            {
                "icon": "pi pi-trash",
                "tooltip": "Delete",
                "action": "delete"
            }
        ]
    }
}